<% layout("layout/boilerplate.ejs") %>


<div class="container mt-5">
    <h1 class="text-center mb-4">SOS Alerts</h1>
    <% if (SOS.length > 0) { %>
        <div class="row">
            <% SOS.forEach(s => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0">
                        <div class="card-body text-center">
                            <h5 class="card-title">SOS ID: <%= s.id %></h5>
                            <button class="btn btn-danger mt-3" onclick="location.href='/sos/<%=s.id%>'">
                                Open Alert
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <h3 class="text-center text-muted mt-5">No SOS Alerts Available</h3>
    <% } %>
</div>
